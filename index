  <script>
    // simple confetti when Help Mode is toggled on or when someone clicks "I'm In"
    const confettiCanvas = document.getElementById('confetti');
    const cx = confettiCanvas.getContext('2d');
    const parts = [];
    function resize(){ confettiCanvas.width = innerWidth; confettiCanvas.height = innerHeight; }
    addEventListener('resize', resize); resize();
    function burst(x=innerWidth/2, y=innerHeight/3){
      for(let i=0;i<120;i++){
        parts.push({x,y, vx:(Math.random()*2-1)*6, vy:(Math.random()*2-1)*6 - 4, r:Math.random()*3+1, a:1, s:Math.random()*120+80});
      }
    }
    function tick(){
      cx.clearRect(0,0,confettiCanvas.width,confettiCanvas.height);
      for(let i=parts.length-1;i>=0;i--){
        const p=parts[i]; p.vy+=0.08; p.x+=p.vx; p.y+=p.vy; p.a-=1/p.s; if(p.a<=0){parts.splice(i,1); continue;}
        cx.globalAlpha = Math.max(p.a,0);
        cx.beginPath(); cx.arc(p.x,p.y,p.r,0,Math.PI*2);
        // cycle hues between accent colors without hard-coding specific colors
        const hue = (i*7)%360; cx.fillStyle = `hsl(${hue} 90% 70%)`;
        cx.fill();
      }
      requestAnimationFrame(tick);
    }
    tick();

    const helpersEl = document.getElementById('helpers');
    const helpstateEl = document.getElementById('helpstate');
    const lastdeedEl = document.getElementById('lastdeed');
    const toggle = document.getElementById('help-toggle');
    const btnIn = document.getElementById('im-in');
    const copyBtn = document.getElementById('copy');
    const urlInput = document.getElementById('pumpurl');

    // persisted state
    const state = JSON.parse(localStorage.getItem('grandpa-help')||'{}');
    let helpers = state.helpers||0;
    let helpMode = state.helpMode||false;
    let lastDeed = state.lastDeed||'‚Äî';
    helpersEl.textContent = helpers;
    helpstateEl.textContent = helpMode? 'ON':'OFF';
    toggle.checked = helpMode;
    lastdeedEl.textContent = lastDeed;

    toggle.addEventListener('change',()=>{
      helpMode = toggle.checked; helpstateEl.textContent = helpMode? 'ON':'OFF';
      localStorage.setItem('grandpa-help', JSON.stringify({helpers, helpMode, lastDeed}));
      if(helpMode) burst(innerWidth*0.8, 80);
    });

    btnIn.addEventListener('click',()=>{
      helpers++; helpersEl.textContent = helpers;
      lastDeed = 'Signed up to help'; lastdeedEl.textContent = lastDeed;
      localStorage.setItem('grandpa-help', JSON.stringify({helpers, helpMode, lastDeed}));
      burst();
    });

    copyBtn.addEventListener('click', async () => {
      try { await navigator.clipboard.writeText(urlInput.value); copyBtn.textContent='Copied!'; setTimeout(()=>copyBtn.textContent='Copy Link',1200); }
      catch(e){ urlInput.select(); document.execCommand('copy'); copyBtn.textContent='Copied!'; setTimeout(()=>copyBtn.textContent='Copy Link',1200); }
    });
  </script>
